document.write("<script language='javascript' src='js/common.js'></script>");

var interval = 60;

//加载完毕
$(function() {

  //获取我的信息
  loadURL(wrapIosNativeCallback("getUser"));

  $('#sendMsgButton').click(function() {
    alert(sendMsgButton);
    if (interval == 60) {
      //发送短信验证码
      loadURL(wrapIosNativeCallback("getChangePayPasswordRandomSms", $('#idCard').val(), $('#pwd').val()));
    }

  });


  //提交  修改交易密码
  $('#sureButton').click(function() {
    loadURL(wrapIosNativeCallback("doChangePayPassword", $('#idCard').val(), $('#pwd').val(), $('#code').val()));
  });



});



//获取我的信息
function getUser(data) {

  var obj = jQuery.parseJSON(data);

  $('#mobile').val(obj.MOBILE);

}



// 设置倒计时button
function getMobileCheckCode() {
  //点击之后 不能再点击
  $("#sendMsgButton").unbind("click");
  $("#sendMsgButton").val(interval + "秒后重发");
  timer = window.setInterval("msgInterval();", 1000);

}



// 倒计时
function msgInterval() {

  // 倒计时结束
  if (interval == 0) {

    interval = 60;

    $("#sendMsgButton").val("获取手机验证码");

    $('#sendMsgButton').click(function() {

      if (interval == 60) {
        //发送短信验证码
        loadURL(wrapIosNativeCallback("getChangePayPasswordRandomSms", $('#idCard').val(), $('#pwd').val()));
      }

    });

    window.clearInterval(timer);

  } else {

    $("#sendMsgButton").unbind("click");

    if (isNaN(interval) || isNaN(interval - 1)) {
      $("#sendMsgButton").val("获取手机验证码");
    } else {
      interval = interval - 1;
      $("#sendMsgButton").val(interval + "秒后重发");
    }
  }
}