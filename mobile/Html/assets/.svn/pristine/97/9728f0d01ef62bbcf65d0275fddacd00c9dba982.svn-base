//加载完毕
$(function() {

  //益定宝类型 1个月 或者 3个月
  var type = queryString("type");

  if ("3" == type) {
    $("title").html("益定宝-3个月");
    $("#yearRate").text("12");
  }

  //益定宝
  loadURL(wrapIosNativeCallback("getYdb", type));
});

//益定宝
function getYdb(data) {
     var obj = jQuery.parseJSON(data);
     $("#remain_amount").text(formatMoney(obj.remain_amount));
     $("#progress").text(obj.progress+"%");
     $("#bg_progress").css({"width":obj.progress+"%"});

   //满额
   if(obj.remain_amount<=0){
      $("#goto_apply").hide();
      $("#finished").show();
   }

  $("a").click(function() {
    //跳转到相关页面  url  是否需要登录
    loadURL(wrapIosNativeCallback("gotoLocalWebPage", $("#hadLogin").data("hidden") + "?aid=" + obj.id + "&remain_amount=" + obj.remain_amount, $(this).data("login")));
  });

}



//获取URL参数
function queryString(item) {
  var url = location.href;
  var sValue = url.match(new RegExp("[\?\&]" + item + "=([^\&]*)(\&?)", "i"))
  return sValue ? sValue[1] : sValue
}